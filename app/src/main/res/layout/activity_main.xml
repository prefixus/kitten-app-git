<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="8dp"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/kitten_image"
        android:layout_below="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/lovely_kitten"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/kitten_image_description"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/kitten_button"
        android:text="@string/kitten_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/kitten_image"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>